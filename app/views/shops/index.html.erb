<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12"></div>
  </div>
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
      <p id="notice"><%= notice %></p>
      <%= flash[:alert]%>
      <%=form_tag shops_path, :method => 'get' do%>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "enter an address, we will found shops around 15 km ", class: "form-control" %>
        </p>

      <%end%>
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>



<div class="media">
  <div class="media-body">
    <table class="table table-hover ">
      <thead>
        <tr  >
          <th class="text-center">Chain</th>
          <th class="text-center">Name</th>
          <th class="text-center">Address</th>
          <th class="text-center">City</th>
          <th class="text-center">Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shops.each do |shop| %>
          <tr class="text-center">
            <td><%= shop.chain %></td>
            <td><%= shop.name %></td>
            <td><%= shop.address %></td>
            <td><%= shop.city %></td>
            <td><%= shop.phone %></td>
            <td><%= link_to 'Show', shop, class:'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Edit', edit_shop_path(shop), class:'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="digg_pagination text-center">
    <div class="page_info">
    </div>
    <%= will_paginate(@shops, :renderer => WillPaginate::ActionView::LinkRenderer) %>
    <p>
      Download:
      <%= link_to "CSV", shops_path(format: "csv") %>
    </p>
</div>
<br>
